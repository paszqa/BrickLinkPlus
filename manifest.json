{
    "manifest_version": 2,
    "name": "Bricklink Image Modifier",
    "version": "1.0",
    "description": "Modifies Bricklink images and adds part information.",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      },
      "default_title": "Modify Bricklink Images"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  